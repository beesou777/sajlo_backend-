{
  "name": "@tsoa/cli",
  "description": "Build swagger-compliant REST APIs using TypeScript and Node",
  "version": "5.1.1",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "openapi",
    "swagger",
    "server",
    "node",
    "node.js",
    "codegen",
    "generation",
    "express",
    "hapi.js",
    "koa"
  ],
  "scripts": {
    "build": "yarn clean && yarn tsc && yarn copy-templates",
    "copy-templates": "copyfiles -u 1 ./src/routeGeneration/templates/**/* ./dist",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "tsc": "tsc -b",
    "watch": "tsc -b -w"
  },
  "author": "Luke Autry <lukeautry@gmail.com> (http://www.lukeautry.com)",
  "license": "MIT",
  "dependencies": {
    "@tsoa/runtime": "^5.0.0",
    "deepmerge": "^4.2.2",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "handlebars": "^4.7.7",
    "merge": "^2.1.1",
    "minimatch": "^5.1.0",
    "typescript": "^4.9.5",
    "validator": "^13.7.0",
    "yamljs": "^0.3.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/minimatch": "^5.1.0",
    "@types/node": "^18.7.13",
    "@types/validator": "^13.7.6",
    "@types/yamljs": "^0.2.31",
    "@types/yargs": "^17.0.14",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukeautry/tsoa.git"
  },
  "bin": {
    "tsoa": "dist/cli.js"
  },
  "engines": {
    "yarn": ">=1.9.4",
    "node": ">=12.0.0"
  },
  "engineStrict": true,
